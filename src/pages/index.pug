extends ../pug/layout.pug

block meta
  title Главная
  meta(name='description', content='')

block content
  +navbar.pageheader
  .page-content
    .page-content-header
      .container
        h2 Onboarding Process
        a.btn.btn-primary.js-show-modal(href='#timeline-create') add Touchpoint
    .main
      +b.timeline
        +e.item--start
          +e.label Start
          +e.icon
            +icon('flag')
          +e.H3.title Customer Sold
        +e.item--new
          +e.label Add
          +e.icon
            +icon('plus')
          +e.content
            +e.text-wrap
              +e.H3.title Touchpoint Card Title
              +e.text Lorem ipsum dolor sit amet, consectetur lorem dolor adipiscing
            +e.buttons
              +b.btn--main.__btn.js-show-modal(href='#timeline-create') add Touchpoint
              +b.link.__link(href='#') Learn more
                +icon('arrow-right')
        +e.item--end
          +e.label End
          +e.icon
            +icon('flag')
          +e.H3.title First Renewal
  +page-footer
  +b.modal.timeline-modal#timeline-create
    +e.container
      +e.inner
        +e.BUTTON.btn-close
          +icon('cross')
        +e.H2.title Create Touchpoint
        +e.content
        +b.FORM.timeline-modal__form
          +e.form-row--first
            +counter('day')
            +b.form-group
              +e.LABEL.label Measure by
              +b.SELECT.select.__control(name='measure')
                option Day
                option Month
            +b.form-group
              +e.LABEL.label Period
              +b.SELECT.select.__control(name='period')
                option After customer sold date
                option Another period
            +b.form-group
              +e.LABEL.label For
              +b.SELECT.select.__control(name='for')
                option All Policies
                option Another option
          +e.js
            +e.form-row
              +e.action--send
                +e.action-icon
                  +icon('envelope-circle')
                +e.action-content
                  +e.H3.action-title Send Email
                  +e.action-text Set up emails to automatically send to your clients
              +e.action--create
                +e.action-icon
                  +icon('todo-circle')
                +e.action-content
                  +e.H3.action-title Create a Todo
                  +e.action-text Create ToDo so nothing is missed throughout the Onboarding Process




